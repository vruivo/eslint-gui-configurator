<tr>
  <td class="rule-line">
    <a href="${url}">${name}</a>
  </td>
  <td class="rule-line">
    ${description}
  </td>
  <td class="rule-line">
    <select onchange="toggleConfigVisibility(this)">
      <option value="off">off</option>
      <option value="warn">warn</option>
      <option value="error">error</option>
    <select>
  </td>
</tr>

<tr class="hidden">
  <td colspan="3" class="rule-controls-line">
    ${controls}
  </td>
</tr>
